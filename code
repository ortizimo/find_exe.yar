rule find_exe_files
{					
	meta:
		author = "Saulo 'Sal' Ortiz, Sr. Cyber Forensics Analyst"
		description = "Scans for the file format of a specific file."
		date = "2022-01-07"
		updated = "2022-01-13"
		note = "Files in $Recycle.Bin do not show their actual name. Look for the file's metadata file ($I...) for its actual name"

	strings:
		$magic = { 4d 5a 90 00 03 } private
		$EXE = /[a-zA-Z0-9]{1,30}\.exe/ fullword ascii nocase private
			
			// note 1: Using (private) will stop scan to look inside documents for words with .exe in them
			// note 2: EXE shares HEX with DLL, COM, DRV, SYS, MSI and many other files
						
	condition:
		any of them
}
